<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyRoommate.CreateTasksPage"
             BackgroundImage="login_scrn.jpg"
             Title="CreateTasksPage">
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Task Name" TextColor="White"/>
            <Entry x:Name="TaskName"/>
            <Label Text="Task Description" TextColor="White"/>
            <Entry x:Name="TaskDesc"/>
            <Button Text="Add" Clicked="OkClicked"/>

        </StackLayout>
    </ScrollView>
</ContentPage>