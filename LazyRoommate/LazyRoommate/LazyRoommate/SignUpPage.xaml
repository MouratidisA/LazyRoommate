<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyRoommate.SignUpPage">



  <ContentPage.Content >
  
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center"  >
      <Entry x:Name="usernameEntry" Placeholder="Enter Username" />
      <Entry x:Name="passwordEntry1" Placeholder="Enter Password"  IsPassword="true" />
      <Entry x:Name="passwordEntry2" Placeholder="Re-Enter Password"  IsPassword="true" />
      <Button Text="Create Account" Clicked="RegisterClick" />
      <Button Text="Cancel"  />
      <Label x:Name="messageLabel" />
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>